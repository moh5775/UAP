#include<stdio.h>

struct node
{
    int data;
    struct node *next;
};

struct node *head = NULL;

int main()
{
    while(1)
    {
        int choice;
        printf("\n1: Insert at front\n2: Insert at end\n3: Insert at middle\n4: Display\n");
        printf("Enter your choice: ");
        scanf("%d",&choice);
        switch(choice)
        {
        case 1:
            insert_at_front();
            break;
        case 2:
            insert_at_end();
            break;
        case 3:
            insert_at_middle();
            break;
        case 4:
            display();
            break;
        }
    }
}

void insert_at_front()
{
    struct node *new;
    new = malloc(sizeof(struct node));

    int item;
    printf("Enter item for data field: ");
    scanf("%d",&item);
    new->data = item;
    new->next=head;
    head=new;

}

void insert_at_end()
{
    struct node *new;
    new = malloc(sizeof(struct node));

    int item;
    printf("Enter item for data field: ");
    scanf("%d",&item);
    new->data = item;
    new->next=NULL;
    if (head == NULL)
    {
        head = new;
    }
    else
    {
        struct node *ptr;
        struct node *temp;
        ptr=head;
        while(ptr->next!=NULL)
        {

            ptr=ptr->next;
        }
        ptr->next=new;
    }


}
void insert_at_middle(){
    int pos;
    printf("Position: ");
    scanf("%d",&pos);
    struct node *new=malloc(sizeof(struct node));
    int item;
    printf("Data: ");
    scanf("%d",&item);
    new->data=item;
    new->next=NULL;
    if(head==NULL)
    {
        head=new;
    }
    else
    {
        struct node *ptr;
        ptr=head;
        for(int i=1;i<=pos-1;i++)
        {
            ptr=ptr->next;
        }
        new->next=ptr->next;
        ptr->next=new;
    }
}

void display()
{
    struct node *show= head;
    while(show!=NULL)
    {
        printf("%d ",show->data);
        show=show->next;
    }
}


